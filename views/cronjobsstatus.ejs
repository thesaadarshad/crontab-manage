
<% include navbar %>
<div class="container">
    <h2>CronJobs Status</h2>
    <a class="btn btn-primary" onclick="newServer();"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> New</a>
    <br/>
    <table class="table table-striped" id="main_table">
        <thead>
        <tr>
            <th>#</th>
            <th>Hostname</th>
            <th>CronId</th>
            <th>Execution Time</th>
            <th>Error</th>
            <th>Status</th>
        </tr>
        </thead>
        <div class="text-center">
            <div class="loader"></div>
        </div>

        <tbody id="tbody">

        </tbody>

    </table>
</div>
<% include popup.ejs %>

<script src="/jquery.js"></script>
<script src="/datatables.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/cronjobsstatus.js"></script>
<script src="/bootstrap.min.js"></script>

<script type="text/javascript">
    var routes = [];
    var servers = [];

    $(function () {
        // initialize tooltips
        $('[data-toggle="tooltip"]').tooltip();
        routes = JSON.parse('<%- routes %>');
        servers = JSON.parse('<%- servers.replace(/\\\\/g, "\\\\\\\\").replace(/\\\"/g,"\\\\\"").replace(/\'/g,"\\\'").replace(/\\t/g, " ") %>');

    });
</script>
</body>
</html>